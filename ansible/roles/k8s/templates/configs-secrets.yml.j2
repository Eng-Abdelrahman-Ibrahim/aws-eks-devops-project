apiVersion: v1
kind: ConfigMap
metadata:
  name: myapp-config
  namespace: app
data:
  APP_ENV: "production"
  APP_PORT: "8080"
  DB_HOST: "postgres"
  DB_PORT: "5432"

---
apiVersion: v1
kind: Secret
metadata:
  name: myapp-secrets
  namespace: app
type: Opaque
stringData:
  DB_USER: "appuser"
  DB_PASSWORD: "apppassword"

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: postgres-config
  namespace: app
data:
  POSTGRES_DB: "myappdb"

---
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secrets
  namespace: app
type: Opaque
stringData:
  POSTGRES_USER: "appuser"
  POSTGRES_PASSWORD: "apppassword"
