# Application ConfigMap
apiVersion: v1
kind: ConfigMap
metadata:
  name: app-config
  namespace: eks-build
data:
  APP_ENV: "production"
  APP_PORT: "8080"
  SPRING_PROFILES_ACTIVE: "prod"

---
# Application Secrets
apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: eks-build
type: Opaque
stringData:
  SPRING_DATASOURCE_USERNAME: "appuser"
  SPRING_DATASOURCE_PASSWORD: "apppassword"

---
# PostgreSQL ConfigMap
apiVersion: v1
kind: ConfigMap
metadata:
  name: postgres-config
  namespace: eks-build
data:
  POSTGRES_DB: "myappdb"
  POSTGRES_USER: "appuser"
  POSTGRES_PASSWORD: "apppassword"