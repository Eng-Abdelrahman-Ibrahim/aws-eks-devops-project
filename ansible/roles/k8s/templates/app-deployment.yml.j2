---
# ---------------- Docker Registry Secret ----------------
apiVersion: v1
kind: Secret
metadata:
  name: nexus-credentials
  namespace: eks-build
type: kubernetes.io/dockerconfigjson
data:
  .dockerconfigjson: "{{ lookup('file', 'dockerconfig.json') | b64encode }}"

---
# ---------------- Backend Deployment ----------------
apiVersion: apps/v1
kind: Deployment
metadata:
  name: backend
  namespace: eks-build
spec:
  replicas: 2
  selector:
    matchLabels:
      app: backend
  template:
    metadata:
      labels:
        app: backend
    spec:
      imagePullSecrets:
        - name: nexus-credentials
      containers:
        - name: backend
          image: "{{ backend_image }}"
          ports:
            - containerPort: 8080
          envFrom:
            - configMapRef:
                name: app-config
            - secretRef:
                name: app-secrets
          env:
            - name: SPRING_DATASOURCE_URL
              value: "jdbc:postgresql://postgres.eks-build.svc.cluster.local:5432/myappdb"

---
# ---------------- Frontend Deployment ----------------
apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontend
  namespace: eks-build
spec:
  replicas: 2
  selector:
    matchLabels:
      app: frontend
  template:
    metadata:
      labels:
        app: frontend
    spec:
      imagePullSecrets:
        - name: nexus-credentials
      containers:
        - name: frontend
          image: "{{ frontend_image }}"
          ports:
            - containerPort: 80
          env:
            - name: REACT_APP_API_URL
              value: "http://backend.eks-build.svc.cluster.local:8080"