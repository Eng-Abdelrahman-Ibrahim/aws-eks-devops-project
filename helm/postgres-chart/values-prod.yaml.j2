#values-prod.yaml
namespace: app-prod

postgres:
  replicas: 1
  image:
    repository: "postgres"
    tag: "14"
  releaseName: "postgres-prod"

postgresConfig:
  db: "myappdb"
  user: "appuser"
  password: "apppassword"

storage:
  size: "5Gi"
  storageClassName: "gp2-immediate"

imagePullSecrets:
  name: "nexus-credentials"